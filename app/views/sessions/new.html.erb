<div class="container">
  <h1 class="text-center mt-4">
    Welcome to MessageMe - a complete Chat App
  </h1>

  <div class="text-center my-4">
    <span class="d-inline-flex align-items-center justify-content-center rounded-circle border p-3">
      <i class="fa-solid fa-power-off fs-4" style="color: #f0ad4e;"></i>
    </span>
    <h3 class="mt-3 fw-semibold">Log in to continue</h3>
  </div>

  <div class="main-card">
    <!-- Linha central -->
    <div class="divider-line d-none d-md-block"></div>

    <!-- OR -->
    <div class="or-badge">OR</div>

    <div class="row align-items-center">
      <!-- Login -->
      <div class="col-md-6 pe-md-5">
        <%= form_with scope: :session, url: login_path, local: true do |f| %>
          <div class="mb-3 text-start">
            <%= f.label :username, "Username", class: "form-label small fw-bold" %>
            <div class="input-group">
              <span class="input-group-text">
                <i class="fa-solid fa-user"></i>
              </span>
              <%= f.text_field :username, class: "form-control", placeholder: "Username" %>
            </div>
          </div>

          <div class="mb-4 text-start">
            <%= f.label :password, "Password", class: "form-label small fw-bold" %>
            <div class="input-group">
              <span class="input-group-text">
                <i class="fa-solid fa-lock"></i>
              </span>
              <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
            </div>
          </div>

          <%= f.submit "Login", class: "btn btn-custom-login" %>
        <% end %>
      </div>

      <!-- Sign Up -->
      <div class="col-md-6 ps-md-5 text-center mt-4 mt-md-0">
        <%= link_to login_path, class: "btn btn-custom-signup" do %>
          <i class="fa-regular fa-pen-to-square me-2"></i>
          Sign Up
        <% end %>
      </div>
    </div>
  </div>
</div>