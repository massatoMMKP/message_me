<div class="container">
  <div class="text-center my-4">
    <span class="d-inline-flex align-items-center justify-content-center rounded-circle border p-3">
      <i class="fa-solid fa-coffee fs-4" style="color: #f0ad4e;"></i>
    </span>
    <h3 class="mt-3 fw-semibold">Friends</h3>
  </div>

  <%# ConteÃºdo Principal %>
  <div class="row mt-4">
    <div class="col-9">
      <div class="card shadow-lg chatbox d-flex flex-column" style="min-height: 550px;">
        <%= turbo_stream_from "chatroom_channel" %>
        
        <div class="card-body p-4 flex-grow-1" id= "messages" data-controller="scroll" data-action="turbo:before-stream-render@document->scroll#scrollToBottom">

          <%= render @messages %>
        </div>

        <div class="p-3 border-top bg-light rounded-bottom">
         <%= render partial: "messages/form", locals: { message: Message.new } %>
        </div>
      </div>
    </div>

    <div class="col-3">
      <div class="card shadow-lg chatbox border-0">
        <div class="list-group list-group-flush bg-dark rounded overflow-hidden menu-inverted">
          <a href="#" class="list-group-item list-group-item-action bg-dark text-light border-0 active py-2">
            Home
          </a>
          <a href="#" class="list-group-item list-group-item-action bg-dark text-light border-0 py-2">
            Messages
          </a>
          <a href="#" class="list-group-item list-group-item-action bg-dark text-light border-0 py-2">
            Friends
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
